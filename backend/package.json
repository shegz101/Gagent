{
  "name": "ai-workspace-backend",
  "version": "1.0.0",
  "description": "Backend server for AI Workspace with MCP servers and API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "echo 'Build skipped - using tsx runtime'",
    "start": "tsx src/index.ts",
    "mcp:server": "tsx src/mcp/server.ts",
    "test": "tsx tests/test-tools.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force && npm run db:seed",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "mcp",
    "mastra",
    "ai",
    "workspace"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20.9.0"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.44",
    "@mastra/core": "^0.20.0",
    "@mastra/mcp": "^0.13.3",
    "@mastra/memory": "^0.15.5",
    "@prisma/client": "^6.17.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "googleapis": "^161.0.0",
    "prisma": "^6.17.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^24.7.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3"
  }
}
